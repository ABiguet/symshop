{% extends "base.html.twig" %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
	<h1>Nos produits phares</h1>
	<div class="row">
		{% for p in products %}
			<div class="col-4">
				<div class="card">
					<img src="{{p.mainPicture}}" class="img-fluid" alt="">
					<div class="card-body">
						<h4 class="card-title">{{p.name}}
							({{ p.price / 100 }}
							&euro;)</h4>
						<span class="badge bg-primary">
							{{ p.category.name }}
						</span>
						<p class="card-text">{{p.shortDescription}}</p>
						<a href="#" class="btn btn-primary-sm">Détails</a>
						<a href="#" class="btn btn-primary btn-success">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<hr>
	<h2>Un service irréprochable</h2>
	<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Explicabo incidunt voluptate beatae repudiandae sintmolestias quisquam velit reprehenderit necessitatibus temporibus, veniam est unde veritatis totam!</p>
	<div class="row">
		{% include "shared/_assurance.html.twig" with {
            'color': 'primary',
            'icone': 'fas fa-truck',
            'text': "Lorem ipsum dolor sit amet consectetur adipisicing elit. Nisi, similique quos impedit asperiores quae deleniti."
        } %}
		{% include "shared/_assurance.html.twig" with {
            'color': 'success',
            'icone': 'fab fa-500px',
            'text': "Lorem ipsum dolor sit amet consectetur adipisicing elit. Nisi, similique quos impedit asperiores quae deleniti."
        } %}
		{% include "shared/_assurance.html.twig" with {
            'color': 'warning',
            'icone': 'fab fa-airbnb',
            'text': "Lorem ipsum dolor sit amet consectetur adipisicing elit. Nisi, similique quos impedit asperiores quae deleniti."
        } %}
	</div>
{% endblock %}
