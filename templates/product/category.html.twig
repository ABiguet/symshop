{% extends "base.html.twig" %}
{% block title %}Catégorie :
	{{category.name}}
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-12">
			<div class="row">
				<div class="col-12">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{path('homepage')}}">Accueil</a>
						</li>
						<li class="breadcrumb-item">
							<a href="#">{{category.name}}</a>
						</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<h1>Catégorie :
				{{category.name}}</h1>
		</div>
	</div>
	<div class="row">
		{% for p in category.products %}
			<div class="col-3">
				<div class="card">
					<img src="{{p.mainPicture}}" class="img-fluid" alt="">
					<div class="card-body">
						<a href="{{ path('product_show', {'slug_category':p.category.slug, 'slug':p.slug}) }}">
							<h4 class="card-title">{{p.name}}
								({{ p.price / 100 }}
								&euro;)</h4>
						</a>

						<span class="badge bg-primary">
							{{ p.category.name }}
						</span>
						<p class="card-text">{{p.shortDescription}}</p>
						<a href="{{ path('product_show', {'slug_category':p.category.slug, 'slug':p.slug}) }}" class="btn btn-primary-sm">Détails</a>
						<a href="#" class="btn btn-primary btn-success">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
