{% extends "base.html.twig" %}
{% block title %}
	Edition d'un produit
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-12">
			<div class="row">
				<div class="col-12">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{path('homepage')}}">Accueil</a>
						</li>
						<li class="breadcrumb-item">
							<a href="#">Admin</a>
						</li>
						<li class="breadcrumb-item">
							<a href="#">Editer produit</a>
						</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-6">
			<h1>Edition d'un produit</h1>
			{#{{ form(formView) }}#}
			{{ form_start(formView, {'attr': {'novalidate':'novalidate'}}) }}
			{{ form_errors(formView) }}
			{# {{ form_widget(formView) }} #}
			<div class="row">
				<div class="col">
					{{ form_row(formView.name) }}
					{{ form_row(formView.price) }}
					{{ form_row(formView.shortDescription) }}
					{{ form_row(formView.category) }}
					{{ form_row(formView.mainPicture) }}
				</div>
			</div>
			<button type="submit" class="btn btn-primary mt-2">
				<i class="fa fa-save"></i>
				Sauvegarder
			</button>
			{{ form_end(formView) }}
		</div>
	</div>
{% endblock %}
